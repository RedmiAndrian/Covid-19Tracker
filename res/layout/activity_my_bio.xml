<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".MyBio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biografi saya"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat sejahtera. Nama saya Andrian Harry. Saya masih Tingkatan 3 dan bersekolah di Sekolah Menengah Sains Miri."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/sekolah"
        android:layout_width="175dp"
        android:layout_gravity="center"
        android:layout_height="175dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini saya cipta khas untuk telefon pintar yang menjalankan Android 5.1 dan ke atas (Mohon maaf kepada pengguna iOS)."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi yang digunakan: \n1. Android Studio (Menggunakan bahasa pengaturcaraan Kotlin dan XML)"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumber: \nSemua gambar yang digunakan diambil daripada Google Image. \nMaklumat tentang Covid-19 diambil daripada Wikipedia Bahasa Melayu."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application program interface (API) untuk maklumat berkenaan jumlah kes Covid-19 adalah daripda https://corona.lmao.ninja/"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semoga maklumat yang terdapat dalam aplikasi ini sangat bermanfaat kepada anda semua."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>